{
  "name": "next-serve",
  "version": "1.0.0",
  "description": "Web-style abstraction to create serverless handlers",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "test": "jest",
