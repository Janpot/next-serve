  "bugs": {
    "url": "https://github.com/Janpot/next-serve/issues"
  },
  "homepage": "https://github.com/Janpot/next-serve#readme",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/node-fetch": "^2.3.4",
    "get-port": "^5.0.0",
    "jest": "^24.8.0",
    "prettier": "^1.17.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "node-fetch": "^2.6.0"
  }
